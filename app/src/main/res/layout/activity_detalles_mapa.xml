<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".detalle_pais">


    <TextView
        android:id="@+id/lblPais"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@android:color/holo_blue_dark"
        android:text="PAIS"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="24sp"
        android:textStyle="bold" />

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.MapFragment"
        android:layout_width="match_parent"
        android:layout_height="269dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/lbLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:background="@android:color/background_light"
            android:text="Capital:"
            android:textColor="@android:color/darker_gray"
            android:textSize="19sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lblCapital"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:background="@android:color/background_light"
            android:text="Capital"
            android:textColor="@android:color/darker_gray"
            android:textSize="17sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/separ"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="11dp"
        android:background="@android:color/darker_gray"
        android:textColor="@android:color/darker_gray"
        android:textStyle="bold" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/lbCoordenadas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:background="@android:color/background_light"
            android:text="Coordenadas geogrÃ¡ficas:"
            android:textColor="@android:color/darker_gray"
            android:textSize="19sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lblCoordenadas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:background="@android:color/background_light"
            android:text="Norte: \nSur: \nEste: \nOeste:"
            android:textColor="@android:color/darker_gray"
            android:textSize="17sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/separ2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="11dp"
        android:background="@android:color/darker_gray"
        android:textColor="@android:color/darker_gray"
        android:textStyle="bold" />

</LinearLayout>